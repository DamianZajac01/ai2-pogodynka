{% extends 'base.html.twig' %}

{% block title %}Weather{% endblock %}

{% block body %}
    <h1>Weather</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ weather.id }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ weather.localization.city }}</td>
            </tr>
            <tr>
                <th>Temperature</th>
                <td>{{ weather.temperature }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ weather.description }}</td>
            </tr>
            <tr>
                <th>Datetime</th>
                <td>{{ weather.date ? weather.date|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_weather_index') }}">back to list</a>

    <a href="{{ path('app_weather_edit', {'id': weather.id}) }}">edit</a>

    {{ include('weather/_delete_form.html.twig') }}
{% endblock %}
